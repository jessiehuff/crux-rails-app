<%= form_for @project do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %> <br><br>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %> <br><br>
  </div>

  <div class="checkboxes">
    <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %>
  </div>

  <div class="action">
    <%= f.submit %>
  </div>
<% end %>
