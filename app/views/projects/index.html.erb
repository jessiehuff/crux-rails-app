<% if @projects.empty? %>
  <h3><%= "You don't have any projects yet. Would you like to create a new one?" %></h3>

<% else %>
<br></br>
<br></br> 
<div class="row" id="projectsIndex">
    <h3>Search by Project Tag/Category:</h3>
    <%= form_tag(projects_path, method: :get, id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Projects" %>
      <%= submit_tag 'Search', name: nil %>
    <% end %>
    <br><br>
</div>
<div class="new-project">
  <%= link_to "New Project", new_project_path, :class => "btn btn-primary" %>
</div>


    <% @projects.each do |project| %>
      <div class="card">
          <h2 class="card-header"><%= link_to project.title, project_path(project) %> </h2>
        <div class="card-body">
          <p class="card-text">
            <%= project.description%>
          </p>
        </div>
      </div>
        <% end %>
      </div>
    <% end %>



<br></br><br></br> 

<% if current_user %>
<h4>
  <%= link_to "Sign Out", destroy_user_session_path, {method: :delete}%>
</h4>
<% end %>
