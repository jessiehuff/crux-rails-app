<% if @projects.empty? %>
  <h3><%= "You don't have any projects yet. Would you like to create a new one?" %></h3>

<% else %>
<h2>Projects:</h2>
<br>
  <h3>Search by Project Tag/Category:</h3>
  <%= form_tag(projects_path, method: :get, id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Projects" %>
    <%= submit_tag 'Search', name: nil %>
  <% end %>
  <br><br>
  <% @projects.each do |project| %>
    <h2><%= link_to project.title, project_path(project) %> - </h2>
    <p> <%= project.description %> </p>
  <% end %>
<% end %>

<br><br>
<%= link_to "Add a New Project", new_project_path %><br><br><br>

<% if current_user %>
<%= link_to "Sign Out", destroy_user_session_path, {method: :delete}%>
<% end %>
