<h2>Project Title:</h2>
  <%= @project.title %>

<p>Description: </p>
  <%= @project.description %>

<p> Tags: </p>
  <ul>
    <% @project.tags.each do |tag| %>
      <li><%= tag.name %></li>
    <% end %>
  </ul>

  <h2> Project Messages: </h2>
    <ul>
      <% @project.messages.each do |msg| %>
        <li><%= msg.title %></li>
        <li><%= msg.content %></li>
        <% end %>
    </ul>
  <h3>Add Message:</h3>
    <%= render 'messages/message' %>

<%= link_to 'Back', projects_path %>
