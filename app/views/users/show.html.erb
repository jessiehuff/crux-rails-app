<h1> Hi <%= current_user.email %>!</h1>
<br><br>
<h2>Your Profile</h2>
<br>
<h3>Projects You've Added:</h3>
<% if current_user.projects.empty? %>
  <h3><%= "You don't have any projects yet. Would you like to create a new one?" %></h3>

<% else %>
  <% current_user.projects.each do |project| %>
    <h2><%= link_to project.title, project_path(project) %> - </h2>
    <p> <%= project.description %> </p>
  <% end %>
<% end %>
